<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <%
        // message the validation
        if (messages.errors) {
        for (i = 0; i < messages.errors.length; i++) {
        %>
        <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Fail !</strong> <%= messages.errors[i].msg %>
        </div>
        <%
        }
        }

        // message the reason change password fail
        if (messages.reason_fail) {
        %>
        <div class="alert alert-warning">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <%= messages.reason_fail %>
        </div>
        <%
        }

        // message if success
        if (messages.success) {
        %>
        <div class="alert alert-success">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <%= messages.success %>
        </div>
        <%
        }
        %>

        <h1>
            <%= title %>
        </h1>
        <br>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-body">
                        <table id="tableListOrders" class="table table-bordered table-striped dataTable">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Customer</th>
                                    <th>Order Date</th>
                                    <th>Total Amount</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% orders.forEach(order => { %>
                                <tr>
                                    <td><%= order._id %></td>
                                    <td><%= order.user_id.email %></td>
                                    <td><%= new Date(order.createdAt).toLocaleString() %></td>
                                    <td><%= order.total_price %></td>
                                    <td><% if(order.status == 1) { %>
                                        <span class="label label-warning ">Pending</span>
                                        <%} else if (order.status == 2) { %>
                                        <span class="label label-primary ">Confirmed</span>
                                        <% }  else if (order.status == 3) { %>
                                            <span class="label label-default ">Processing</span>
                                        <% }  else if (order.status == 4) { %>
                                            <span class="label label-info ">Delivering</span>
                                        <% }  else if (order.status == 5) { %>
                                            <span class="label label-success ">Done</span>
                                        <% } else if (order.status == 0) { %>
                                        <span class="label label-danger ">Cancelled</span>
                                        <% } %></td>
                                    <td><a href='/admin/orders/<%= order._id%>' target="_blank" title='View detail'
                                            class='btn btn-primary btn-flat'><span class='fa fa-search'
                                                aria-hidden='true'></span></a></td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>

        </div>
    </section>
</div>