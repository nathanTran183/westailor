<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <%
        var totalAmount = 0;
        // message the validation
        if (messages.errors) {
        for (i = 0; i < messages.errors.length; i++) {
        %>
        <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Fail !</strong> <%= messages.errors[i].msg %>
        </div>
        <%
        }
        }

        // message the reason change password fail
        if (messages.reason_fail) {
        %>
        <div class="alert alert-warning">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <%= messages.reason_fail %>
        </div>
        <%
        }

        // message if success
        if (messages.success) {
        %>
        <div class="alert alert-success">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <%= messages.success %>
        </div>
        <%
        }
        %>

        <h1>
            Statistics
        </h1>
        <br>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Choose Date Range</h3>
                        <hr>
                        <div class="form-group">
                            <label class="col-md-2">Date range:</label>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right" id="reservation">
                                </div>
                            </div>
                            <!-- /.input group -->
                        </div>
                    </div>
                    <div class="box-body">
                        <table id="tableListStatisticOrders" class="table table-bordered table-striped dataTable">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Booker Email</th>
                                    <th>Booker Name</th>
                                    <th>Order Date</th>
                                    <th>Ship fee</th>
                                    <th>Total Amount</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% orders.forEach(order => { totalAmount += order.total_price; %>
                                <tr>
                                    <td><%= order._id %></td>
                                    <td><%= order.user_id.email %></td>
                                    <td><%= order.user_id.full_name %></td>
                                    <td><%= new Date(order.createdAt).toLocaleString() %></td>
                                    <td><%= order.ship_fee %> $AUD</td>
                                    <td><%= order.total_price %> $AUD</td>
                                    <!-- <td><span class="label label-success ">Done</span></td> -->
                                    <td><a href='/admin/orders/<%= order._id%>' target="_blank" title='View detail'
                                            class='btn btn-primary btn-flat'><span class='fa fa-search'
                                                aria-hidden='true'></span></a></td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <div class="box-footer">
                        <h3 class="pull-right">Total Amount: <%= totalAmount %> $AUD</h3>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>

        </div>
    </section>
</div>