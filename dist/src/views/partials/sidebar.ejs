<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar" style="height: auto;">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="/bower_components/AdminLTE/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>
                    <%
                    if(session.user != null){ %>
                    <%= session.user.username %>
                    <% } %>
                </p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>

            </div>
        </div>
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" style="line-height: 80%">
            <li class="header">MAIN NAVIGATION</li>
            <%
            if(session.user != null)
            if (session.user.role == "Admin") { %>
            <li>
                <a href="/admin/employees">
                    <i class="glyphicon glyphicon-user"></i>
                    <span>Employees</span>
                </a>
            </li>
            <li>
                <a href="/admin/employees/blackList">
                    <i class="fa fa-circle-o" style="margin-left: 10%"></i>
                    <span>Black List</span>
                </a>
            </li>
            <!--<li class="active">-->
            
            <li>
                <a href="/admin/orders/statistic">
                    <i class="fa fa-newspaper-o"></i>
                    <span>Statistic</span>
                </a>
            </li>
            <% } %>
            <li>
                <a href="/admin/users">
                    <i class="fa fa-users"></i>
                    <span>Users</span>
                </a>
            </li>
            <li>
                <a href="/admin/users/blackList">
                    <i class="fa fa-circle-o" style="margin-left: 10%"></i>
                    <span>Black List</span>
                </a>
            </li>
            <% 
                    let url = "";
                if(session.user.role == "Admin") {
                    url = "/admin/orders" 
                } else if (session.user.role == "Staff") {
                    url = "/admin/orders/pending"
                } %>
            <li>
                <a href="<%= url %>">
                    <i class="fa fa-shopping-cart"></i>
                    <span>Total Orders</span>
                </a>
            </li>
            <li>
                <a href="/admin/orders/create">
                    <i class="fa fa-circle-o" style="margin-left: 10%"></i>
                    <span>Create Order</span>
                </a>
            </li>
            <% if (session.user.role == "Admin") { %> 
            <li>
                <a href="/admin/orders/pending">
                    <i class="fa fa-circle-o" style="margin-left: 10%"></i>
                    <span>Pending Orders</span>
                </a>
            </li>
            <li>
                <a href="/admin/orders/confirmed">
                    <i class="fa fa-circle-o" style="margin-left: 10%"></i>
                    <span>Confirmed Orders</span>
                </a>
            </li>
            <li>
                <a href="/admin/orders/processing">
                    <i class="fa fa-circle-o" style="margin-left: 10%"></i>
                    <span>Processing Orders</span>
                </a>
            </li>
            <li>
                <a href="/admin/orders/history">
                    <i class="fa fa-circle-o" style="margin-left: 10%"></i>
                    <span>History</span>
                </a>
            </li>
            <% } %>
            <li>
                <a href="/admin/feedback">
                    <i class="fa fa-envelope-o"></i>
                    <span>Feedback</span>
                </a>
            </li>
            <% if (session.user != null && session.user.role == "Admin") { %>
            <li>
                <a href="/admin/discounts">
                    <i class="glyphicon glyphicon-gift"></i>
                    <span>Discounts</span>
                </a>
            </li>
            <% } %>
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>
